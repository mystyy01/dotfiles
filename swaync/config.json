{
  "$schema": "/usr/share/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "top",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "application",
  "fit-to-screen": true,
  "relative-timestamps": true,
  "notification-icon-size": 48,
  "notification-body-image-height": 120,
  "notification-body-image-width": 200,
  "timeout": 6,
  "timeout-low": 4,
  "timeout-critical": 0,
  "widgets": [
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "notifications": {
      "max-lines": 8
    }
  }
}

